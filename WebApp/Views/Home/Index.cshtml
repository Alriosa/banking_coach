<!-- Background Image -->
@using WebApp.Helpers;
<script src="~/Scripts/Views/Login/vIndex.js"></script>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="home">
    <div class="container">
        <div class="row text-center justify-content-between">
            <div class="col-lg-5 col-sm-11">
                <div class=" text-box ">
                    <h1 class="home-title">BOLSA DE EMPLEO</h1>
                    <div id="home-title">
                        <p class="subtitle home-subtitle-1">
                            Donde todos los estudiantes podrán subir sus hojas de vida,
                            para ser evaluados por los reclutadores de entidades financieras
                        </p>
                        <p class="subtitle home-subtitle-2">Exclusiva para egresados de Banking Academy</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-sm-11" id="page-title">
                <img class="img" src="~/Content/imgs/Empleo.jpg" alt="">
                <div class=" py-5">
                    <p class="subtitle home-subtitle-2">Información del usuario</p>
                    <div class="cardHome page-title">
                        <div class="lines"></div>
                        <div class="content">
                            <div class="details">
                                <h3 id="name"> </h3>
                                <span id="username"></span>
                                <div class="info">
                                    <h4><br /><span id="email"></span></h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-sm-11" id="containerFormLogin">
                <img class="img" src="~/Content/imgs/Empleo.jpg" alt="">

                <div class="container">
                    <div class="row justify-content-center">
                        <div class="text-center my-4">

                            <h1 class="form-title">INGRESA A TU CUENTA</h1>
                        </div>
                        <form id="frmLogin" class="form frmLogin">
                            <div class="row align-content-sm-center">
                                <div class="col-sm-12 text-center">
                                    <div class="form-row ">
                                        <div class="col-lg-12">
                                            @Html.CtrlInputSecond(id: "txtLogin", type: "text", required: true, placeHolder: "Nombre de Usuario", columnDataName: "UserLogin")

                                        </div>
                                    </div>
                                    <div class="form-row ">
                                        <div class="col-lg-12">
                                            @Html.CtrlInputSecond(id: "txtPassword", type: "password", required: true, placeHolder: "Contraseña", columnDataName: "UserPassword")

                                        </div>
                                    </div>
                                    <div class="form-row ">
                                        <div class="col-lg-12">
                                            <div class="rememberme">
                                                @Html.CtrlCheckbox(id: "ckbRememberme", type: "checkbox", label: "Recordarme?", classes: "ckbRememberme my-1", columnDataName: "RememberMe")
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-row" style="margin: 0px auto;">
                                        <div style="margin: 0px auto 10px;">
                                            @Html.CtrlButton(viewName: "vLogin", type: "button", id: "btnLogin", label: "Ingresar", onClickFunction: "ValidateInputs", buttonType: "orange")
                                        </div>
                                        <div class="container">
                                            <div class="row">
                                                <div class="col-12">
                                                    <a href="#" style="color: #f17c27;" data-toggle="modal" data-target="#modal-password">¿Olvidaste tu contraseña?</a>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" style="color: #000;" id="modal-password" tabindex="-1" role="dialog" aria-labelledby="modal-password" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-passwordabel">Recuperar Contraseña</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formRecoverPassword">
                    <div class="form-group">
                        <label for="email" class="col-form-label">Correo electrónico:</label>
                        <input type="email" class="form-control" id="email" ColumnDataName="Email">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" id="btnRecoverPassword" class="btn btn-primary">Recuperar contraseña</button>
            </div>
        </div>

    </div><!-- /.dialogo-modal -->
</div><!-- /.contraseña-modal