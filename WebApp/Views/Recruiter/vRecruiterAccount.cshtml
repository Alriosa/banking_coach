@using WebApp.Helpers;
<script src="~/Scripts/Views/Recruiter/vRecruiterAccount.js"></script>
@{
    ViewBag.Title = "vRecruiterAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Mi Cuenta</h2>

<h4 id="P_UserName"></h4>
<input type="text" id="txtIdRecruiter" class="d-none">


<div class="dashboard-heading d-flex justify-content-center">
    <h2>Cambiar <span>Contraseña</span></h2>
</div>

<div class="d-flex justify-content-center">
    <div class="custom-form custom-form-fields text-center col-lg-6">
        <p>Para modificar la contraseña necesitamos verificar los siguientes datos de su cuenta:</p>
        <form id="frmRecruiterUpdatePassword" method="get" action="">
            <div class="form-row ">
                <div class="col-lg-12">
                    @Html.CtrlInputSecond(id: "txtOldPassword", type: "password", required: true, placeHolder: "Contraseña actual", columnDataName: "OldPassword")
                </div>
            </div>
            <div class="form-row ">
                <div class="col-lg-12">
                    @Html.CtrlInputSecond(id: "txtNewPassword", type: "password", required: true,
           placeHolder: "Nueva contraseña", columnDataName: "Password")
                </div>
            </div>
            <div class="form-row ">
                <div class="col-lg-12">
                    @Html.CtrlInputSecond(id: "txtConfirmNewPassword", type: "password", required: true,
          placeHolder: "Confirmar nueva contraseña", columnDataName: "")
                </div>
            </div>
            <div class="form-row ">
                <div class="col-lg-12">
                    @Html.CtrlButton(viewName: "vRecruiterAccount", id: "btnChangePassword", type: "button",
               label: "Modificar", onClickFunction: "ValidateInputs", buttonType: "orange")
                </div>
            </div>
        </form>
    </div><!-- end custom-form -->
</div><!-- end form-content -->


<script>

    $(document).ready(function () {
        var vrecruiterAccount = new vRecruiterAccount();
        document.getElementById("txtIdRecruiter").value = "@ViewBag.IdRecruiter";

        vrecruiterAccount.GetData();

    });
</script>