@using WebApp.Helpers;

<script src="~/Scripts/Views/Recruiter/StudentsHired.js"></script>

<style>
    .modal-content {
        background: #2b2b2bd6;
        color: white;
    }

    .modal .close {
        color: white;
    }

    .btn-radius {
        border-radius: 100%;
        margin: 2px 4px;
    }

    .select-tests {
        color: white;
        background: #565656;
        padding: 4px 20px;
        border: 1px solid #f39c12;
        width: 100%;
        margin-top: 4px;
        margin-bottom: 4px;
    }
    .input-recruitment {
        color: white;
        background: #565656;
        padding: 4px 20px;
        border: 1px solid #f39c12;
        width: 100%;
        margin-top: 4px;
        margin-bottom: 4px;
    }
    .modal-backdrop.show {
        opacity: 0.8;
    }
</style>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center savepdf">
    <div class="container-fluid">
        <div class="row text-center justify-content-between">
            <div class="col-lg-12 col-sm-11">
                <div class=" text-box ">
                    <h1>Estudiantes en Contratación</h1>
                    <p class="subtitle home-subtitle-1">
                    </p>
                </div>
            </div>
            <div class="col-lg-12 col-sm-11 ">
                <div class="justify-content-center">
                    <div class="card border-secondary mb-6">
                        <div class="card-header">Lista de Estudiantes Contratados</div>
                        <div class="card-body" style="overflow: auto;">
                            <table id="studentHiredList" class="display" cellspacing="0" width="100%"
                                   ColumnsDataName="FirstName,FirstLastName,IdType,IdentificationNumber,Country,Residence,Licenses">
                                <thead>
                                    <tr>
                                        <th>Nombre </th>
                                        <th>Apellido </th>
                                        <th>Tipo de documento </th>
                                        <th>Número de Identificación</th>
                                        <th>País de Origen </th>
                                        <th>Residencia en Costa Rica</th>
                                        <th>Licencias de conducir</th>
                                        <th>Fecha de Contratación</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row text-center justify-content-between">

        </div>
    </div>
