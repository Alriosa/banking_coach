@using WebApp.Helpers;
<script src="~/Scripts/Views/Recruiter/vRecruiterUpdate.js"></script>

@{
    ViewBag.Title = "vRecruiterUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center">
    <div class="container">
        <div class="row text-center justify-content-between">
            <div class="col-lg-5 col-sm-11">
                <div class=" text-box page-title">
                    <h1>ACTUALIZA AL RECLUTADOR</h1>
                    <p class="subtitle home-subtitle-1">
                    </p>
                </div>
            </div>
            <div class="col-lg-6 col-sm-11">
                <img class="img" src="~/Content/imgs/reclutador2.jpg" alt="">

                <div class="container">
                    <div class="row justify-content-center">
                        <div class="text-center mt-4">

                        </div>
                        <form id="frmRecruiterUpdate" class="form frmRecruiterUpdate">
                            <div class="row align-content-sm-center">
                                <div class="col-sm-12 text-center">
                                    <input type="text" id="txtIdRecruiter" class="d-none">
                                    <input type="text" id="txtRecruiterLogin" class="d-none">
                                    <input type="text" id="txtIdentificationNumber" class="d-none">
                                    <input type="text" id="txtIdType" class="d-none">
                                  
                                    <div class="form-row ">
                                        <div class="col-lg-12">
                                            @Html.CtrlInputSecond(id: "txtName", type: "text", required: true, placeHolder: "Nombre Completo", columnDataName: "Name")
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col-lg-12">
                                            @Html.CtrlInputSecond(id: "txtEmail", type: "email", required: true, placeHolder: "Correo electrónico", columnDataName: "Email")
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 text-center">
                                    <div class="form-row" style="margin: 0px auto;">
                                        <div style="margin: 0px auto 10px;">
                                            @Html.CtrlButton(viewName: "vRecruiterUpdate", id: "btnChange", type: "button",
              label: "Modificar", onClickFunction: "ValidateInputs", buttonType: "orange")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div><!-- end form-content -->
<br />
<div class="d-flex justify-content-center">
    <div class="container">
        <div class="row text-center justify-content-between">

            <div class="col-lg-6 col-sm-11">
                <img class="img" src="~/Content/imgs/reclutador2.jpg" alt="">

                <div class="container">
                    <div class="row justify-content-center">
                        <div class="text-center mt-4">

                        </div>
                        <form id="frmRecruiterUpdatePassword" class="form frmRecruiterUpdatePassword">
                            <div class="row align-content-sm-center">
                                <div class="col-sm-12 text-center">
                                    <input type="text" id="txtIdRecruiterP" class="d-none">
                                    <div class="form-row ">
                                        <div class="col-lg-12">
                                            @Html.CtrlInputSecond(id: "txtNewPassword", type: "password", required: true,
                                   placeHolder: "Nueva contraseña", columnDataName: "RecruiterPassword")
                                        </div>
                                    </div>
                                    <div class="form-row ">
                                        <div class="col-lg-12">
                                            @Html.CtrlInputSecond(id: "txtConfirmNewPassword", type: "password", required: true,
                                  placeHolder: "Confirmar nueva contraseña", columnDataName: "")
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 text-center">
                                    <div class="form-row" style="margin: 0px auto;">
                                        <div style="margin: 0px auto 10px;">
                                            @Html.CtrlButton(viewName: "vRecruiterUpdate", id: "btnChangePassword", type: "button",
            label: "Modificar", onClickFunction: "ValidateInputPassword", buttonType: "orange")
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 col-sm-11">
                <div class=" text-box page-title">
                    <h1>ACTUALIZA LA CONTRASEÑA</h1>
                    <p class="subtitle home-subtitle-1">
                        En está sección, se podrá modificar la contraseña
                    </p>
                </div>
            </div>
        </div>
    </div>
</div><!-- end form-content -->
<script>

    $(document).ready(function () {
        var vrecruiterUpdate = new vRecruiterUpdate();
        document.getElementById("txtIdRecruiter").value = "@ViewBag.IdRecruiter";

        vrecruiterUpdate.GetData();

    });
</script>