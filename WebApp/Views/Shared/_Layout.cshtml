<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Banking Coach</title>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/index.css" rel="stylesheet" />
    <script src="~/Scripts/Views/ControlActions.js"></script>
</head>
<body class="bg-gray">
    <img class="bg-top" src="~/Content/imgs/background-top.png" />
    <div class="navbar navbar-expand-lg fixed-top navbar-dark bg-transparent">
        <div class="container">
            <a href="../" class="navbar-brand">Banking Coach</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link href="@Url.Action("Index","Home")">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link href="@Url.Action("Index","Home")">Servicios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link href="@Url.Action("Index","Home")">Matrícula</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" id="themes">Students <span class="caret"></span></a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="@Url.Action("vRegisterStudent","Student")">Register Student</a>
                            <a class="dropdown-item" href="@Url.Action("vListStudent","Student")">List Students</a>
                            <a class="dropdown-item" href="@Url.Action("vUpdateStudent","Student")">Update Student</a>
                        </div>
                </ul>

            </div>
        </div>
    </div>

    <div class="container body-content">
        <div class="alert alert-success alert-dismissable" style="display: none" id="alert_container">
            <button type="button" class="close" onclick="$('.alert').hide()">&times;</button>
            <span id="alert_message"></span>
        </div>
        @RenderBody()
        <hr />

    </div>

    <footer>
        @Html.Partial("~/Views/Shared/_Footer.cshtml")
    </footer>
</body>
@*<script>
    $(document).ready(function () {
        $('.alert').hide();
    });
</script>*@
</html>
