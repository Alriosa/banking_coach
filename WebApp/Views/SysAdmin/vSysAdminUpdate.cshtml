@using WebApp.Helpers;
<script src="~/Scripts/Views/SysAdmin/SysAdminUpdate.js"></script>
@{
    ViewBag.Title = "vSysAdminUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Actualizar Administrador del Sistema</h2>


<div class="dashboard-heading d-flex justify-content-center">
    <h2>Cambiar <span>Contraseña</span></h2>
</div>

<div class="d-flex justify-content-center">
    <div class="custom-form custom-form-fields text-center col-lg-6">
        <p>Para modificar la contraseña necesitamos verificar los siguientes datos de su cuenta:</p>
        <form id="frmSysAdminUpdatePassword" class="form" action="">
            <input type="text" id="txtIdSysAdmin" class="d-none">
            <input type="text" id="txtAdminLogin" class="d-none">
            <div class="form-row ">
                <div class="col-lg-12">
                    @Html.CtrlInputSecond(id: "txtOldPassword", type: "password", required: true, placeHolder: "Contraseña actual", columnDataName: "OldPassword")
                </div>
            </div>
            <div class="form-row ">
                <div class="col-lg-12">
                    @Html.CtrlInputSecond(id: "txtNewPassword", type: "password", required: true,
           placeHolder: "Nueva contraseña", columnDataName: "SysAdminUserID")
                </div>
            </div>
            <div class="form-row ">
                <div class="col-lg-12">
                    @Html.CtrlInputSecond(id: "txtConfirmNewPassword", type: "password", required: true,
          placeHolder: "Confirmar nueva contraseña", columnDataName: "")
                </div>
            </div>
            <div class="form-row ">
                <div class="col-lg-12">
                    @Html.CtrlButton(viewName: "vSysAdminUpdate", id: "btnChangePassword", type: "button",
               label: "Modificar", onClickFunction: "ValidateInputPassword", buttonType: "orange")
                </div>
            </div>
        </form>
    </div><!-- end custom-form -->
</div><!-- end form-content -->

<script>

    $(document).ready(function () {
        var sysAdminUpdate = new vSysAdminUpdate();
        document.getElementById("txtIdSysAdmin").value = "@ViewBag.IdSysAdmin";
        sysAdminUpdate.GetData();

    });
</script>

