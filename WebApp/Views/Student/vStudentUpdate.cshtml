
@{
    ViewBag.Title = "vUpdateStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="home">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5 col-sm-11">
                <div class=" text-box">
                    <h2>Mi Cuenta</h2>
                    <br />
                    <h5>Nombre de usuario:</h5>
                    <p id="P_UserName"></p>
                    <br />
                    <h5>Correo electrónico:</h5>
                    <p id="P_Email"></p>
                    <br />
                    <h5>Primer Nombre:</h5>
                    <p id="P_First_Name"></p>
                    <br />
                    <h5>Primer Apellido:</h5>
                    <p id="P_Last_Name"></p>
                    <br />
                    <input type="text" id="txtIdStudent" class="d-none">
                </div>
            </div>
            <div class="col-lg-6 col-sm-11">
                <div class="d-flex justify-content-center">

                    <div class="custom-form custom-form-fields text-center col-lg-12">
                        <div class="dashboard-heading d-flex justify-content-center">
                            <h2>Cambiar <span>Contraseña</span></h2>
                        </div>
                        <p>Para modificar la contraseña necesitamos verificar los siguientes datos de su cuenta:</p>
                        <form id="frmStudentUpdatePassword" method="get" action="">
                            <div class="form-row ">
                                <div class="col-lg-12">
                                    @Html.CtrlInputSecond(id: "txtOldPassword", type: "password", required: true, placeHolder: "Contraseña actual", columnDataName: "OldPassword")
                                </div>
                            </div>
                            <div class="form-row ">
                                <div class="col-lg-12">
                                    @Html.CtrlInputSecond(id: "txtNewPassword", type: "password", required: true,
                           placeHolder: "Nueva contraseña", columnDataName: "Password")
                                </div>
                            </div>
                            <div class="form-row ">
                                <div class="col-lg-12">
                                    @Html.CtrlInputSecond(id: "txtConfirmNewPassword", type: "password", required: true,
                          placeHolder: "Confirmar nueva contraseña", columnDataName: "")
                                </div>
                            </div>
                            <div class="form-row ">
                                <div class="col-lg-12">
                                    @Html.CtrlButton(viewName: "vStudentAccount", id: "btnChangePassword", type: "button",
                               label: "Modificar", onClickFunction: "ValidateInputs", buttonType: "orange")
                                </div>
                            </div>
                        </form>
                    </div><!-- end custom-form -->
                </div><!-- end form-content -->
            </div>
        </div>
    </div>
</div>

